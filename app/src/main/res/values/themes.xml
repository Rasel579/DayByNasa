<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DayByNasa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_primary_color</item>
        <item name="colorPrimaryVariant">@color/dark_purple_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_purple_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="textInputStyle">@style/CustomInputStyle</item>
        <item name="bottomAppBarStyle">@style/CustomAppBarLayoutForBayNyNasaTheme</item>
        <item name="floatingActionButtonStyle">@style/FAB_Custom_Theme</item>
    </style>


    <style name="CustomSecondaryTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="backgroundColor">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/icon_text_color</item>
        <item name="bottomAppBarStyle">@style/CustomAppBarLayoutForSecondaryTheme</item>
        <item name="chipStyle">@style/Widget.App.Chip.SecondaryCustomTheme</item>
        <item name="floatingActionButtonStyle">@style/FAB_Custom_Theme_For_Secondary_Theme</item>

        <!-- Status bar color. -->

    </style>

    <!--Chip Style-->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_margin">@dimen/margin_chip</item>
        <item name="android:textAlignment">center</item>
        <item name="rippleColor">@color/teal_700</item>
        <item name="strokeColor">@color/primary</item>
        <item name="chipBackgroundColor">@color/light_purple_secondary</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.App.Chip.SecondaryCustomTheme" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_margin">@dimen/margin_chip</item>
        <item name="android:textAlignment">center</item>
        <item name="rippleColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--Input Layout Style-->
    <style name="CustomInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
    </style>

    <style name="CustomAppBarLayoutForSecondaryTheme" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/primary</item>
    </style>
    <style name="CustomAppBarLayoutForBayNyNasaTheme" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/purple_primary_color</item>
    </style>

    <!--Floating Action Button Theme-->
    <style name="FAB_Custom_Theme" parent="Widget.MaterialComponents.FloatingActionButton">
           <item name="backgroundTint">@color/dark_purple_primary</item>
           <item name="android:src">@drawable/ic_plus_fab</item>
           <item name="elevation">1dp</item>
           <item name="hoveredFocusedTranslationZ">1dp</item>
           <item name="tint">@color/primary_light</item>
    </style> <style name="FAB_Custom_Theme_For_Secondary_Theme" parent="Widget.MaterialComponents.FloatingActionButton">
           <item name="backgroundTint">@color/primary_dark</item>
           <item name="android:src">@drawable/ic_plus_fab</item>
           <item name="elevation">1dp</item>
           <item name="hoveredFocusedTranslationZ">1dp</item>
           <item name="tint">@color/primary_light</item>
    </style>
</resources>