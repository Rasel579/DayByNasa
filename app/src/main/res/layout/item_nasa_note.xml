<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_note_padding"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="@dimen/item_note_padding"
        android:orientation="horizontal"
        android:elevation="20dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            tools:text="23/07/21"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            tools:text="Some description"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/show_hiden_text_btn"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/moon"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/move_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:src="@android:drawable/arrow_up_float"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/move_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="5dp"
                android:src="@android:drawable/arrow_down_float"
                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:srcCompat="@android:drawable/ic_delete"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hamburger_btn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_hamburger_icon"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_purple_primary"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hiden_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/haiden_description_text"
        android:visibility="gone"/>


</LinearLayout>
